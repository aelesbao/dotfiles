# vim: ft=ghostty

# Terminal
# term = xterm-kitty

# Theme
theme = tokyonight

# Font
font-size = 10

font-family             = Hack Nerd Font
font-family-bold        = Hack Nerd Font Bold
font-family-italic      = Hack Nerd Font Italic
font-family-bold-italic = Hack Nerd Font Bold Italic

font-synthetic-style = false

bold-is-bright = false
