# vim: ft=ghostty

# Terminal
# term = xterm-kitty

# Theme
theme = tokyonight

# Font
font-size = 10

font-family             = Hack Nerd Font
font-family-bold        = Hack Nerd Font Bold
font-family-italic      = Hack Nerd Font Italic
font-family-bold-italic = Hack Nerd Font Bold Italic

font-synthetic-style = false

bold-is-bright = false
font-thicken = true

adjust-cell-height = 20%

# Cursor
cursor-opacity = 0.95
mouse-hide-while-typing = true

# Clipboard
copy-on-select = true
clipboard-paste-protection = true

# Window
background-opacity = 0.9
background-blur-radius = 20
unfocused-split-opacity = 0.5

window-decoration = none
window-theme = ghostty
window-padding-balance = true

quit-after-last-window-closed = true

# Linux
gtk-adwaita = true
adw-toolbar-style = flat

# macOS
macos-titlebar-style = transparent
macos-option-as-alt = true
macos-auto-secure-input = true
macos-secure-input-indication = true
macos-icon-frame = plastic
macos-icon = custom-style
macos-icon-screen-color = #540D6E

# Shell
shell-integration = zsh
shell-integration-features = true

# Shaders
# custom-shader = ./shaders/galaxy.glsl
custom-shader-animation = true

# Others
auto-update = check

# Keybinds

# Valid modifiers:
# - shift
# - ctrl (alias: control)
# - alt (alias: opt, option)
# - super (alias: cmd, command)

# config
keybind = super+comma=open_config
keybind = super+shift+comma=reload_config

# window control
keybind = super+q=quit
keybind = super+n=new_window
keybind = super+shift+w=close_window
keybind = super+w=close_surface
keybind = super+alt+shift+w=close_all_windows
keybind = super+enter=toggle_fullscreen
keybind = super+ctrl+f=toggle_fullscreen

# tab control
keybind = super+t=new_tab
keybind = super+shift+left_bracket=previous_tab
keybind = super+shift+right_bracket=next_tab
keybind = super+physical:one=goto_tab:1
keybind = super+physical:two=goto_tab:2
keybind = super+physical:three=goto_tab:3
keybind = super+physical:four=goto_tab:4
keybind = super+physical:five=goto_tab:5
keybind = super+physical:six=goto_tab:6
keybind = super+physical:seven=goto_tab:7
keybind = super+physical:eight=goto_tab:8
keybind = super+physical:nine=last_tab

# split control
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+left_bracket=goto_split:previous
keybind = super+right_bracket=goto_split:next
keybind = super+alt+down=goto_split:bottom
keybind = super+alt+left=goto_split:left
keybind = super+alt+right=goto_split:right
keybind = super+alt+up=goto_split:top
keybind = super+ctrl+down=resize_split:down,10
keybind = super+ctrl+left=resize_split:left,10
keybind = super+ctrl+right=resize_split:right,10
keybind = super+ctrl+up=resize_split:up,10
keybind = super+ctrl+equal=equalize_splits
keybind = super+g>equal=equalize_splits
keybind = super+shift+enter=toggle_split_zoom
keybind = super+g>z=toggle_split_zoom

# extras
keybind = super+g>i=inspector:toggle

# copy and paste
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

# arrow navigation
keybind = alt+left=esc:b
keybind = alt+right=esc:f
keybind = super+left=text:\x01
keybind = super+right=text:\x05
keybind = home=text:\x01
keybind = end=text:\x05

# scrolling
keybind = super+home=scroll_to_top
keybind = super+end=scroll_to_bottom
keybind = super+page_down=scroll_page_down
keybind = super+page_up=scroll_page_up

# shell integration
keybind = super+a=select_all
keybind = super+down=jump_to_prompt:1
keybind = super+up=jump_to_prompt:-1
keybind = super+shift+down=jump_to_prompt:1
keybind = super+shift+up=jump_to_prompt:-1
keybind = super+k=clear_screen
keybind = super+alt+i=inspector:toggle

# font size control
keybind = super+plus=increase_font_size:1
keybind = super+kp_add=increase_font_size:2
keybind = super+equal=increase_font_size:1
keybind = super+kp_equal=increase_font_size:2
keybind = super+minus=decrease_font_size:1
keybind = super+kp_subtract=decrease_font_size:2
keybind = super+zero=reset_font_size
keybind = super+kp_0=reset_font_size

# tmux integration with user-keys
keybind = alt+shift+enter=esc:[10;13~
keybind = ctrl+zero=esc:[5;48~
keybind = ctrl+one=esc:[5;49~
keybind = ctrl+two=esc:[5;50~
keybind = ctrl+three=esc:[5;51~
keybind = ctrl+four=esc:[5;52~
keybind = ctrl+five=esc:[5;53~
keybind = ctrl+six=esc:[5;54~
keybind = ctrl+seven=esc:[5;55~
keybind = ctrl+eight=esc:[5;56~
keybind = ctrl+nine=esc:[5;57~
keybind = ctrl+alt+zero=esc:[7;48~
keybind = ctrl+alt+one=esc:[7;49~
keybind = ctrl+alt+two=esc:[7;50~
keybind = ctrl+alt+three=esc:[7;51~
keybind = ctrl+alt+four=esc:[7;52~
keybind = ctrl+alt+five=esc:[7;53~
keybind = ctrl+alt+six=esc:[7;54~
keybind = ctrl+alt+seven=esc:[7;55~
keybind = ctrl+alt+eight=esc:[7;56~
keybind = ctrl+alt+nine=esc:[7;57~

