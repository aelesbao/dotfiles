# Color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers
#
# Based on Tokyonight color theme
#
set notification-error-bg   "{{color1}}"
set notification-error-fg   "{{foreground}}"
set notification-warning-bg "{{color3}}"
set notification-warning-fg "{{color8}}"
set notification-bg         "{{background}}"
set notification-fg         "{{foreground}}"
set completion-bg           "{{background}}"
set completion-fg           "{{color15}}"
set completion-group-bg     "{{background}}"
set completion-group-fg     "{{color15}}"
set completion-highlight-bg "{{color8}}"
set completion-highlight-fg "{{foreground}}"
set index-bg                "{{background}}"
set index-fg                "{{foreground}}"
set index-active-bg         "{{color8}}"
set index-active-fg         "{{foreground}}"
set inputbar-bg             "{{color0}}"
set inputbar-fg             "{{color2}}"
set statusbar-bg            "{{color0}}"
set statusbar-fg            "{{foreground}}"
set highlight-active-color  rgba({{color10 | rgb}}, 0.4)
set highlight-color         rgba({{color3 | rgb}}, 0.4)
set highlight-fg            "{{background}}"
set default-bg              "{{background}}"
set default-fg              "{{foreground}}"

set render-loading          true
set render-loading-fg       "{{background}}"
set render-loading-bg       "{{foreground}}"

# Recolor mode settings
# <C-r> to switch modes
#
set recolor-lightcolor      "{{background}}"
set recolor-darkcolor       "{{foreground}}"

