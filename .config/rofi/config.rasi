/* ---- Configuration ---- */
configuration {
  modes:           [ drun, run, window, ssh, keys, calc, emoji, nerdy ];

  font:            "Hack Nerd Font 11";

  hover-select:    false;
  scroll-method:   1;

  terminal:        "ghostty";

  // ---- SSH ----
  parse-known-hosts: true;
  display-ssh:       " ï€£ ";

  me-select-entry: "";
  me-accept-entry: "MousePrimary";

  timeout {
    action: "kb-cancel";
    delay:  0;
  }

  filebrowser {
    directories-first: true;
    sorting-method:    "name";
  }
}

@import "theme.rasi"
