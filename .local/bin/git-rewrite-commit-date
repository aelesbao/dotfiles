#!/bin/sh

set -eu

commit="${1:-}"
date="${2:-}"

if [[ -z "$commit" ]] || [[ -z "$date" ]]; then
  echo "usage: git rewrite-commit-date SHA DATE"
  exit 1
fi

export GIT_AUTHOR_DATE="$date"
export GIT_COMMITTER_DATE="$date"

git rebase -i "$commit"^
git commit --amend --no-edit --date "$date"
git rebase --continue
