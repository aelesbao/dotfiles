#!/usr/bin/env zsh

if [[ -n "$ARCHWAY_HOME" ]] && [[ -n "$ARCHWAY_DOCKER_TAG" ]]; then
  exec docker run --rm -it \
    -p 1317:1317 \
    -p 26656:26656 \
    -p 26657:26657 \
    -v $ARCHWAY_HOME:/root/.archway \
    archwaynetwork/archwayd:$ARCHWAY_DOCKER_TAG \
    $@
else
  exec "$GOPATH"/bin/archwayd $@
fi
