[user]
  name = Augusto Elesb√£o
  signingkey = FFAE83F3
  useConfigOnly = true

[core]
  editor = vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  whitespace = trailing-space,space-before-tab
  pager = delta || diff-so-fancy | less --tabs=4 -RFX || less --tabs=4 -RFX

[url "git@github.com:"]
  insteadOf = "github:"
  insteadOf = "gh:"

[url "git@github.com:aelesbao/"]
  insteadOf = "https://github.com/aelesbao/"
  insteadOf = "git://github.com/aelesbao/"
  insteadOf = "aelesbao:"

[url "https://aur4.archlinux.org/"]
  insteadOf = "aur:"

[url "aur@aur4.archlinux.org:"]
  pushInsteadOf = "aur:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"

[url "git@bitbucket.org:"]
  insteadOf = "bitbucket:"

[url "git@gitlab.com:"]
  insteadOf = "gitlab:"

[github]
  user = aelesbao

[branch]
  autoSetupRebase = always

[push]
  default = upstream

[commit]
  gpgSign = true
  verbose = true

[alias]
  st      = status
  s       = status -s -b
  ci      = commit -S
  cis     = !git ci -S
  amend   = !git cis --amend -C HEAD
  fixup   = !git cis --fixup=$(git rev-parse --verify HEAD)
  co      = checkout
  w       = whatchanged
  wiff    = diff --color-words --word-diff
  ediff   = diff --ext-diff
  search  = log -S
  l       = log --graph --decorate --date=local
  lol     = !git l --oneline --abbrev-commit
  lola    = !git lol --all
  lstat   = !git l --patch-with-stat --summary
  dh      = diff HEAD
  pull    = pull --ff-only
  plr     = pull --rebase --prune
  head    = rev-parse --short --verify HEAD
  news    = log -p HEAD@{1}..HEAD@{0}
  publish = !git push --set-upstream origin "$(git rev-parse --abbrev-ref HEAD)"
  clean   = clean -i
  clear   = clean -i
  current-branch = !git symbolic-ref -q --short HEAD || git describe --tags --exact-match

[init]
  defaultBranch = main

[git-extras]
  default-branch = main

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[rerere]
  enabled = true

[rebase]
  autosquash = true

[apply]
  whitespace = warn

[format]
  pretty = format:%C(bold yellow)%h%C(reset) %s %C(red)%d%C(reset) %n%C(magenta)%ad%C(reset) %n%C(blue)%an%C(reset)%n

[color]
  ui     = true
  pager  = true

;[color "diff-highlight"]
  ;oldHighlight = red bold 52
  ;newNormal = green bold
  ;newHighlight = green bold 22
  ;oldNormal = red bold

;[color "diff"]
  ;meta = yellow
  ;frag = magenta bold
  ;commit = yellow bold
  ;old = red bold
  ;new = green bold
  ;whitespace = red reverse

[diff]
  tool = vscode
  ;renames = copies
  colorMoved = default

[difftool "vscode"]
  cmd = code -n --wait --diff $LOCAL $REMOTE

[merge]
  tool = vscode
  ff = only
  conflictstyle = diff3

[mergetool "vscode"]
  cmd = code -n --wait $MERGED
  keepBackup = false

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true

[credential]
  helper = osxkeychain

[hub]
  protocol = ssh

[include]
  path = ~/.gitconfig.local
